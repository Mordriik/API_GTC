generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cenarios {
  id             Int              @id @default(autoincrement())
  nome           String           @unique(map: "unique_nome_cenario")
  descricao      String?
  roteirocenario roteirocenario[]
}

model figurinos {
  id              Int               @id @default(autoincrement())
  nome            String            @unique(map: "unique_nome_figurino")
  descricao       String?
  roteirofigurino roteirofigurino[]

  @@unique([nome, descricao], map: "unique_nome_desc_figurino")
}

model roteirocenario {
  id         Int       @id @default(autoincrement())
  roteiro_id Int?
  cenario_id Int?
  cenarios   cenarios? @relation(fields: [cenario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  roteiros   roteiros? @relation(fields: [roteiro_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([roteiro_id, cenario_id])
}

model roteirofigurino {
  id          Int        @id @default(autoincrement())
  roteiro_id  Int?
  figurino_id Int?
  figurinos   figurinos? @relation(fields: [figurino_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  roteiros    roteiros?  @relation(fields: [roteiro_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([roteiro_id, figurino_id])
}

model roteiros {
  id              Int               @id @default(autoincrement())
  titulo          String            @unique(map: "unique_nome_roteiro")
  descricao       String?
  texto           String
  roteirocenario  roteirocenario[]
  roteirofigurino roteirofigurino[]
}

model textospopups {
  id         Int    @id @default(autoincrement())
  termo      String @unique
  explicacao String
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}